<div class="contenedor-articulos">
    <div class="contenedor-header">
        <label>
            Articulo
        </label>
        <button class="agregar-usuario" type="button" onclick="mostrar_vista_parcial()">
            <label>
                agregar Articulo
            </label>
            <span class="material-icons-outlined">
                add
            </span>
        </button>
    </div>
    <div class="contenedor-tabla">
        <table>
            <tr class="encabezados">
                <th>imagen</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Precio distribuidor</th>
                <th>Precio comercial</th>
                <th>Stock minimo</th>
                <th>Stock</th>
                <th>distribuidor</th>
            </tr>
            @if (Session["Articulos"] != null)
            {
                FloristeriaMillan.Querys.Logica_Articulos.ArticulosProveedores[] articulos = (FloristeriaMillan.Querys.Logica_Articulos.ArticulosProveedores[])Session["Articulos"];
                foreach (var articulo in articulos)
                {
                    <tr class="articulos">
                        <td>
                            <img src=@articulo.Articulo.fotoArt alt="Alternate Text" />
                        </td>
                        <td class="datos" onclick="buscar_articulo(this)">@articulo.Articulo.nombreArt</td>
                        <td class="datos" onclick="buscar_articulo(this)">@articulo.Articulo.precioArt</td>
                        <td class="datos" onclick="buscar_articulo(this)">@articulo.Articulo.precioDistribuidorArt</td>
                        <td class="datos" onclick="buscar_articulo(this)">@articulo.Articulo.precioComercialArt</td>
                        <td class="datos" onclick="buscar_articulo(this)">@articulo.Articulo.stockMinimoArt</td>
                        <td class="datos" onclick="buscar_articulo(this)">@articulo.Articulo.stockArt</td>
                        <td class="datos" onclick="buscar_articulo(this)">@articulo.Proveedor.nombreEmpresaProv</td>
                        <td>
                            <button class="boton-eliminar" type="button" onclick="eliminar_articulo(this)">
                                <span class="material-icons-outlined">
                                    delete
                                </span>
                            </button>
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="vista-parcial">
        <div class="d-flex flex-column" id="boxForm">
            @using (Html.BeginForm("Articulos_formulario", "HomeStaff", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="contenedor-formularios">
                    <div class="separador">
                        <div class="inputbox archivo">
                            <img src="https://localhost:44394/Imagenes/logo.png" alt="Alternate Text" id="contenedor-imagen" />
                            <input type="file" required name="fotoArt" id="imagen-articulo" onchange="cargar_imagen()">
                            <label for="imagen-articulo" class="boton-personalizado">
                                <span class="material-icons-outlined">
                                    upload
                                </span>
                                <span>
                                    Seleccionar Imagen
                                </span>
                            </label>
                        </div>
                        <div class="botones">
                            <input type="button" value="Registrar" onclick="enviar_datos_articulo()">
                            <input type="button" value="Cancelar" onclick="cerrarventana_articulo()" id="cancelar">
                        </div>
                    </div>
                    <div class="formulario">
                        <label id="titulo_login">Articulo</label>
                        <div class="inputbox">
                            <input type="text" required name="nombre">
                            <span>Nombre</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="number" step="0.01" min="0.01" required name="precio">
                            <span>Precio</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="number" step="0.01" min="0.01" required name="precioDis">
                            <span>Precio distribuidor</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="number" step="0.01" min="0.01" required name="precioCon">
                            <span>Precio comercial</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="number" step="1" min="1" required name="stockMin">
                            <span>Stock minimo</span>
                            <i></i>
                        </div>
                        <div class="inputbox">
                            <input type="number" step="1" min="1" required name="stock">
                            <span>Stock</span>
                            <i></i>
                        </div>
                        <div class="combobox">
                            <select class="clase" name="nombreDis">
                                <option class="distribuidor" selected>Seleccione un distribuidor</option>
                                @if (Session["Distribuidores"] != null)
                                {
                                    var distribuidores = (FloristeriaMillan.Models.Proveedores[])Session["Distribuidores"];
                                    foreach (var distribuidor in distribuidores)
                                    {
                                        <option class="distribuidor">@distribuidor.nombreEmpresaProv</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

