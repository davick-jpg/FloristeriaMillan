
@{
    ViewBag.Title = "Articulo";
    Layout = "~/Views/Shared/PlantillaPrincipal/_PlantillaPrincipal.cshtml";
}

<div class="main-articulo">
    <div class="contenedor-articulo">
        @if (Session["Articulo"] != null)
        {

            FloristeriaMillan.Models.Producto producto = (FloristeriaMillan.Models.Producto)Session["Articulo"];

            <label class="titulo-articulo">
                @producto.nombrePro
            </label>
            <div class="divisor-contenedores">
                @if (Session["Direcciones"] != null)
                {
                    String[] direcciones = (String[])Session["Direcciones"];

                    <div class="contenedor-galeria-articulo">
                        <button class="buton-imagen-activo" type="button">
                            <img src=@direcciones[0] alt="" class="imagen-activa" />
                        </button>
                        <button class="boton-imagen" type="button">
                            <img src=@direcciones[1] alt="" class="imagen-inactiva" />
                        </button>
                        <button class="boton-imagen" type="button">
                            <img src=@direcciones[2] alt="" class="imagen-inactiva" />
                        </button>
                        <button class="boton-imagen" type="button">
                            <img src=@direcciones[3] alt="" class="imagen-inactiva" />
                        </button>
                    </div>
                }
                <div class="contenedor-informacion-articulo">
                    <label class="descripcion-articulo">
                        @producto.descripcionPro
                    </label>
                    <div class="contenedor-dedicatoria">
                        <label class="titulo-dedicatoria">
                            ¿Desea agregar un mensaje personalizado?
                        </label>
                        <textarea id="dedicatoria-input" name="dedicatoria" placeholder="Ingrese su dedicatoria (menos de 200 caracteres)"></textarea>
                    </div>
                    <div class="contenedor-botones">
                        <label class="precio-articulo">
                            $@producto.precioPro
                        </label>
                        <button class="añadir-carrito" type="button" onclick="anadir_carrito()">
                            <label>
                                Añadir
                            </label>
                            <span class="material-icons-outlined">
                                shopping_cart
                            </span>
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
